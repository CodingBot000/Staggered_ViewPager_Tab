<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.exam.sample.viewmodel.MainViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_item_trending_height"
        android:background="@color/colorBlack"
        android:paddingLeft="@dimen/margin_padding_10dp"
        android:paddingRight="@dimen/margin_padding_10dp">

        <ImageView
            android:layout_width="@dimen/top_item_trending_logo_width"
            android:layout_height="@dimen/top_item_trending_logo_height"
            android:background= "@drawable/logo_giphy"
            android:layout_centerVertical="true"/>
        <TextView
            android:id = "@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Create"
            android:layout_marginRight="@dimen/margin_padding_10dp"
            android:layout_toLeftOf="@id/imgPlus"
            style="@style/TextTitleStyle"/>
        <ImageButton
            android:id = "@+id/imgPlus"
            android:layout_width="@dimen/top_item_trending_plus_button_size"
            android:layout_height="@dimen/top_item_trending_plus_button_size"
            android:background="@drawable/icon_create"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</layout>